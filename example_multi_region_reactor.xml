<simulation>
  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec><lib>areal</lib><name>MultiRegionReactor</name></spec>
    <spec><lib>cycamore</lib><name>Source</name></spec>
    <spec><lib>cycamore</lib><name>Sink</name></spec>
    <spec><lib>agents</lib><name>NullInst</name></spec>
    <spec><lib>agents</lib><name>NullRegion</name></spec>
  </archetypes>

  <facility>
    <name>USource</name>
    <config>
      <Source>
        <outcommod>fresh_u</outcommod>
      </Source>
    </config>
  </facility>

  <facility>
    <name>OneFacility</name>
    <config>
      <MultiRegionReactor>
        <fuel_incommods> 
          <val>fresh_u</val>
        </fuel_incommods>
        <fuel_inrecipes> 
          <val>fresh_uranium</val>
        </fuel_inrecipes>
        <fuel_outcommods> 
          <val>spent_u</val>
        </fuel_outcommods>
        <fuel_outrecipes> 
          <val>spent_uranium</val>
        </fuel_outrecipes>
        <cycle_time>10</cycle_time>
        <refuel_time>1</refuel_time>
        <assem_size>100</assem_size>
        <n_assem_region> <val>3</val> </n_assem_region>
        <n_assem_batch>1</n_assem_batch>
        <power_cap>100</power_cap>
      </MultiRegionReactor>
    </config>
  </facility>

  <facility>
    <name>USink</name>
    <config>
      <Sink>
        <in_commods>
          <val>spent_u</val>
        </in_commods>
      </Sink>
    </config>
  </facility>

  <region>
    <name>OneRegion</name>
    <config> <NullRegion /> </config>
    <institution>
      <name>OneInst</name>
      <initialfacilitylist>
        <entry>
          <prototype>USource</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>OneFacility</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>USink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <config> <NullInst /> </config>
    </institution>
  </region>

  <recipe>
    <name>fresh_uranium</name>
    <basis>mass</basis>
    <nuclide> <id>92235</id> <comp>0.00710971</comp> </nuclide>
    <nuclide> <id>92238</id> <comp>0.99283720</comp> </nuclide>
  </recipe>

  <recipe>
    <name>spent_uranium</name>
    <basis>mass</basis>
    <nuclide> <id>94241</id> <comp>0.00710971</comp> </nuclide>
    <nuclide> <id>94239</id> <comp>0.99283720</comp> </nuclide>
  </recipe>

</simulation>
